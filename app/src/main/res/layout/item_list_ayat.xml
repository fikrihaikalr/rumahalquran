<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/putih"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/relativeTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff5f5f5">
            <LinearLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:background="@drawable/ic_ayat">
                <TextView
                    android:id="@+id/tv_no_ayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/biru_gelap"/>
            </LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeTop"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_arab_ayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِيْمِ"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_margin="5dp"
                android:textIsSelectable="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tv_latin_ayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Bismillaahir Rahmaanir Rahiim"
                android:textColor="@color/biru_500"
                android:textSize="14sp"
                android:layout_below="@id/tv_arab_ayat"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/tv_arti_ayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dengan Nama Allah Yang Maha Pengasih,
Maha Penyayang."
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/hitam"
                android:layout_below="@id/tv_latin_ayat"
                android:layout_margin="5dp"
                android:textIsSelectable="true"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

