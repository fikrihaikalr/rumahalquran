<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.detaildoa.DetailDoaFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_kumpulan_doa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_collection_prayer"
        android:textColor="@color/hitam"
        android:textSize="16sp"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name_doa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Doa Sebelum Tidur"
        android:textSize="24sp"
        android:textColor="@color/hitam"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back"/>
    
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_bismillah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bismillahirrahmannirrahiim"
        android:textSize="12sp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/hijau_persian"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_doa"
        app:layout_constraintStart_toStartOf="@id/tv_name_doa"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_doa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="بِسْمِكَ اللّهُمَّ اَحْيَا وَ بِسْمِكَ اَمُوْتُ"
        android:textSize="20dp"
        android:textColor="@color/hitam"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_bismillah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_latin_doa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="”Bismika allahumma ahyaa wa bismika amuut”"
        android:textColor="@color/biru_gelap"
        android:textSize="14sp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_doa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/translate"
        android:textSize="14sp"
        android:textColor="@color/hitam"
        app:layout_constraintTop_toBottomOf="@id/tv_latin_doa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_regular"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_arti_doa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/hitam"
        android:fontFamily="@font/inter_regular"
        android:text="”Dengan namaMu ya Allah, aku hidup dan aku mati.” (Sahih Bukhari, At-Tauhid: 6845)"
        app:layout_constraintTop_toBottomOf="@id/tv_translate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"/>
    
    <ProgressBar
        android:id="@+id/pb_detail"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>