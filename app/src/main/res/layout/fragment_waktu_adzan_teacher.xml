<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.teacher.waktuadzanteacher.WaktuAdzanTeacherFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rounded_constraint"
                android:layout_width="match_parent"
                android:layout_height="276dp"
                android:background="@drawable/rounded_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_waktu_adzan"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_jam_digital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04:00"
                    android:textSize="48sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="29dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_date_masehi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 Ramadhan 1444"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="-10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_jam_digital"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/transparent"
                    app:layout_constraintTop_toBottomOf="@id/tv_date_masehi"
                    app:layout_constraintStart_toStartOf="@id/tv_date_masehi"
                    app:layout_constraintEnd_toEndOf="@id/tv_date_masehi">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/quot_barangsiapa_yang_meninggalkan_sholat_maka_ia_telah_kafir_quot_n_hr_ahmad_abu_daud_at_tirmidzi_an_nasai_dan_ibnu_majah"
                        android:textColor="@color/putih"
                        android:textSize="11sp"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_waktu_adzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_to_prayer_time"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/rounded_constraint"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/locationSpinnerLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/find_location"
                android:background="@drawable/search_view_bg"
                app:layout_constraintTop_toBottomOf="@+id/tv_waktu_adzan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_subuh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_subuh"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/locationSpinnerLayout"
                app:layout_constraintStart_toStartOf="@id/locationSpinnerLayout"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_subuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shubuh"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/iv_subuh"
                app:layout_constraintStart_toEndOf="@id/iv_subuh"
                app:layout_constraintBottom_toBottomOf="@id/iv_subuh"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_jadwal_subuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="14sp"
                android:layout_marginEnd="36dp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                app:layout_constraintTop_toTopOf="@id/tv_subuh"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_subuh"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_dzuhur"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_zuhur"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/iv_subuh"
                app:layout_constraintStart_toStartOf="@id/iv_subuh"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_dzuhur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dzuhur"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/iv_dzuhur"
                app:layout_constraintStart_toEndOf="@id/iv_dzuhur"
                app:layout_constraintBottom_toBottomOf="@id/iv_dzuhur"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_jadwal_dzuhur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="14sp"
                android:layout_marginEnd="36dp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                app:layout_constraintTop_toTopOf="@id/tv_dzuhur"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_dzuhur"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_ashar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_zuhur"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/iv_dzuhur"
                app:layout_constraintStart_toStartOf="@id/iv_dzuhur"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_ashar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ashar"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/iv_ashar"
                app:layout_constraintStart_toEndOf="@id/iv_ashar"
                app:layout_constraintBottom_toBottomOf="@id/iv_ashar"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_jadwal_ashar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="14sp"
                android:layout_marginEnd="36dp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                app:layout_constraintTop_toTopOf="@id/tv_ashar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_ashar"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_maghrib"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_subuh"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/iv_ashar"
                app:layout_constraintStart_toStartOf="@id/iv_ashar"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_maghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maghrib"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/iv_maghrib"
                app:layout_constraintStart_toEndOf="@id/iv_maghrib"
                app:layout_constraintBottom_toBottomOf="@id/iv_maghrib"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_jadwal_maghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="14sp"
                android:layout_marginEnd="36dp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                app:layout_constraintTop_toTopOf="@id/tv_maghrib"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_maghrib"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_isya"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_subuh"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/iv_maghrib"
                app:layout_constraintStart_toStartOf="@id/iv_maghrib"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_isya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isya"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/iv_isya"
                app:layout_constraintStart_toEndOf="@id/iv_isya"
                app:layout_constraintBottom_toBottomOf="@id/iv_isya"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_jadwal_isya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="14sp"
                android:layout_marginEnd="36dp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                app:layout_constraintTop_toTopOf="@id/tv_isya"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_isya"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>